---
import '@/assets/styles/globals.css';
import { ViewTransitions } from 'astro:transitions';
import Header from '@/components/Header.astro';
import Footer from '@/components/Footer.astro';
import { getPackageTitle } from '@/utils/package';

interface Props {
  title?: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />
    <meta name="naver-site-verification" content="64c6f38c16d1f9d2713c10f196d486ca51e15621" />
    <link rel="icon" type="image/png" href="/favicon.png" />

    <title>{title ?? getPackageTitle()}</title>

    <!-- Theme Change -->
    <script is:inline>
      // ‚òùÔ∏è This script prevent the FART effect.
      if (localStorage.getItem('theme') === null) {
        document.documentElement.setAttribute('data-theme', 'light');
      } else document.documentElement.setAttribute('data-theme', localStorage.getItem('theme'));
      // "theme" LocalStorage value is set by the package to remember user preference.
      // The value is checked and applyed before rendering anything.
    </script>
    <script>
      import { themeChange } from 'theme-change';
      themeChange();
      // üëÜ you could import the CDN directly instead of these two lines
    </script>

    <!-- Google AdSense -->
    <script
      is:inline
      async
      src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=ca-pub-9362115309318925"
      crossorigin="anonymous"></script>

    <!-- Google tag (gtag.js) -->
    <script is:inline async src="https://www.googletagmanager.com/gtag/js?id=G-H0YZJWKYYN"></script>

    <script is:inline>
      window.dataLayer = window.dataLayer || [];
      function gtag() {
        // eslint-disable-next-line
        dataLayer.push(arguments);
      }
      gtag('js', new Date());

      gtag('config', 'G-H0YZJWKYYN');
    </script>

    <ViewTransitions />
  </head>
  <body class="container mx-auto px-5">
    <Header />
    <main>
      <slot />
    </main>
    <Footer />
  </body>
</html>
